@using Microsoft.AspNetCore.Identity
@using ZenithSocietyA2.Models

@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _Localizer

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    var Hello = (LocalizedHtmlString)_Localizer["Hello"];
    var LogIn = (LocalizedHtmlString)_Localizer["Log In"];
    var LogOut = (LocalizedHtmlString)_Localizer["Log Out"];
    var Register = (LocalizedHtmlString)_Localizer["Register"];


}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@LogOut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">@Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@LogIn</a></li>
    </ul>
}
